{
  "name": "akropolis-poc",
  "version": "1.0.0",
  "description": "Akropolis PoC",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "truffle test",
    "build:contracts": "truffle compile && yarn contracts:copy && yarn releases:copy && truffle migrate",
    "contracts:copy": "rimraf frontend/src/contracts && cp -R build/contracts/ frontend/src/contracts",
    "releases:copy": "rimraf frontend/src/releases && cp -R releases frontend/src/releases",
    "start:frontend": "cd frontend && npm run start",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "code": "5.2.0",
    "fs-extra": "6.0.1",
    "ganache-cli": "6.1.3",
    "mkdirp": "0.5.1",
    "solidity-coverage": "0.5.4",
    "truffle": "4.1.11",
    "truffle-hdwallet-provider": "0.0.3",
    "web3": "0.18.4"
  },
  "dependencies": {
    "zeppelin-solidity": "1.10.0"
  },
  "author": "wojciechakro",
  "license": "MIT"
}
